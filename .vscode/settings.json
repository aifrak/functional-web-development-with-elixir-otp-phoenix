{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,

  // Files:
  "files.watcherExclude": {
    "**/.git": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules/**": true,
    "**/npm_cache/**": true,
    // Elixir
    "**/_build/**": true,
    "**/.elixir_ls/**": true,
    "**/.sobelow": true,
    "**/.fetch/**": true,
    "**/cover/**": true,
    "**/deps/**": true,
    "**/doc/**": true,
    "**/erl_crash.dump": true,
    // Dialyzer
    "**/dialyzer/plts": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.husky/_": true,
    // VSCode
    "**/.history": true,
    // NodeJS
    "**/node_modules": true,
    "**/npm_cache": true,
    // Elixir
    "**/_build": true,
    "**/.elixir_ls": true,
    "**/.sobelow": true,
    "**/.fetch": true,
    "**/cover": true,
    "**/deps": true,
    "**/doc": true,
    "**/erl_crash.dump": true,
    // Dialyzer
    "**/dialyzer/plts": true
  },

  // Override languages:
  "[elixir]": {
    "editor.rulers": [98]
  },
  "[eex][html-eex][html]": {
    "editor.rulers": [120]
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": [
        "docker-compose.ci.yml",
        "docker-compose.dev.yml",
        "docker-compose.override.yml"
      ],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ]
}
